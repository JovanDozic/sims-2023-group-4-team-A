<UserControl x:Class="SIMSProject.WPF.CustomControls.ImageSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIMSProject.WPF.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="900">
    <Grid Margin="10,0,10,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="700" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="LeftButton" VerticalAlignment="Center" Grid.Column="0" Content="&#8249;" Click="Button_Click_Previous" Height="50" Width="80"/>
        <Image Grid.Column="1" x:Name="ImageControl" Stretch="UniformToFill" HorizontalAlignment="Left" Width="auto"/>
        <Button x:Name="RightButton" VerticalAlignment="Center" Grid.Column="2" Content="&#8250;" Click="Button_Click_Next" Height="50" Width="80"/>

    </Grid>
</UserControl>
