<UserControl x:Class="SIMSProject.WPF.CustomControls.ImageSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIMSProject.WPF.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="900">
    <Grid Margin="10,0,10,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="700" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Background="#0c669f" x:Name="LeftButton" VerticalAlignment="Center" Click="Button_Click_Previous" Height="50" Margin="41,0,0,0">
            <Image Source="../Views/Guest1/Icons/chevron-left-black.png"></Image>
        </Button>
        <Image Grid.Column="1" x:Name="ImageControl" Stretch="UniformToFill" HorizontalAlignment="Left" Width="auto"/>
        <Button Background="#0c669f" x:Name="RightButton" VerticalAlignment="Center" Grid.Column="2" Click="Button_Click_Next" Height="50" Margin="0,0,42,0">
            <Image Source="../Views/Guest1/Icons/chevron-right-black.png"></Image>
        </Button>

    </Grid>
</UserControl>
