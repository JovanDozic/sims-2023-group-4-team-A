<Page x:Class="SIMSProject.View.Guest2.VouchersDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMSProject.View.Guest2"
        mc:Ignorable="d"
        Title="VouchersDisplay" Height="520" Width="1280">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label FontSize="40" Grid.Row="1" Margin="140,0,0,0">Moji vaučeri</Label>
        <DataGrid FontSize="28" Grid.Row="2" Width="1000" Height="350" IsReadOnly="True" AutoGenerateColumns="False"
                  ItemsSource="{Binding Path=Vouchers, UpdateSourceTrigger=PropertyChanged}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Naziv" Width="100"/>
                <DataGridTextColumn Binding="{Binding Path = Reason}" Header="Razlog dobijanja" Width="450"/>
                <DataGridTextColumn Binding="{Binding Path = FormattedDate}" Header="Datum isticanja" Width="450"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
