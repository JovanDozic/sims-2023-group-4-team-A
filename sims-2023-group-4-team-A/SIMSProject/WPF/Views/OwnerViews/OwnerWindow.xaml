<Window x:Class="SIMSProject.WPF.Views.OwnerViews.OwnerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMSProject.WPF.Views.OwnerViews"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Owner Window" Height="750" Width="430"
        WindowStartupLocation="CenterScreen"
        
        Background="{DynamicResource BackgroundColor}">
    <Window.Resources>
        <Storyboard x:Key="FadeAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0.0" To="1.0" Duration="0:0:0.5" />
        </Storyboard>
    </Window.Resources>

    <Frame x:Name="MainFrame" x:Uid="MainFrame" NavigationUIVisibility="Hidden" Navigating="MainFrame_Navigating"/>

</Window>
