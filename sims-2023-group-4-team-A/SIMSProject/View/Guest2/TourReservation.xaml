<Window x:Class="SIMSProject.View.Guest2.TourReservation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMSProject.View.Guest2"
        mc:Ignorable="d"
        Title="TourReservation" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="30">
        <TextBox>Unesite zeljeni broj ljudi za rezervaciju ture:</TextBox>
        <TextBox x:Name="ReservationNumber" Margin="90,25,90,85"/>
        <Button Click="Reserve_Click" Content="Rezervisi" Margin="80,100,80,15"/>
    </Grid>
</Window>
