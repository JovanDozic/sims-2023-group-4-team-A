<Window x:Class="SIMSProject.View.Guest2.ShowAndSearchTours"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIMSProject.View.Guest2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShowAndSearchTours">

    <DockPanel>

        <ToolBar DockPanel.Dock="Top" Height="50">

            <TextBlock Width="350"/>
            <TextBox x:Name="TextSearch" Width="300" Height="30" />
            <Button  Height="60" Width ="70" Click="PretraziClick" Content="Pretrazi" Background="Gold"/>

        </ToolBar>

        <DataGrid Height="400" SelectionMode="Single" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Lokacija" Width="60"/>
                <DataGridTextColumn Header="Trajanje ture" Width="100"/>
                <DataGridTextColumn Header="Jezik" Width="50"/>
                <DataGridTextColumn Header="Broj ljudi" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>
</Window>
