<Window x:Class="SIMSProject.View.GuideViews.AllAppointmentsByTourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMSProject.View.GuideViews"
        mc:Ignorable="d"
        Title="AllAppointmentsByTourWindow" Height="350" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="280"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="Cancel_TourBTN"
                Grid.Row="1"
                Height="30"
                Width="150"
                Content="Otkaži turu"
                Click="Cancel_TourBTN_Click"/>
        <ListBox Grid.Row="0"
                 FontSize="12"
                 Width="350"
                 Margin="10"
                 ItemsSource="{Binding Path=AllAppointments}"
                 SelectedItem="{Binding SelectedAppointment}"/>
    </Grid>
</Window>
